{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@screens/*": ["src/screens/*"]
    }
  },
  "include": [
    "./**/*"
  ]
}
